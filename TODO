  rar vb RARFILE -> [files, ...]
  rar p -inul RARFILE FILE_IN_ARCHIVE -> file_content

  unzip -lqq ZIP 
  unzip -pqq ZIP FILE_IN_ARCHIVE

  tar --list TAR
  tar --extract --to-stdout --file TAR FILE
 
